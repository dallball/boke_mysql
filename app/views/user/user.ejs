<!DOCTYPE html>
<html lang="en">
<head>
<%include ../common/head.ejs%>
</head>
<body>
	<%include ../common/top.ejs%>
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<h3><%= targetUser.user_name%>的博客</h3>
				<ul>
					<%blogs.forEach(function(item, index){%>
						<li>
							<a href="/user/blog/<%= item.id%>"><%= item.title%></a> 
							<span class="color-999 fs-14">（<%= item.change%>于<%=moment(item.updated_at).format('YYYY-MM-DD')%>）</span>
						</li>
					<%})%>
				</ul>
			</div>
			<div class="col-sm-6">
				<h3><%= targetUser.user_name%>的博文分类</h3>
				<ul>
					<%categories.forEach(function (item, index) {%>
						<li><a href="/user/category?uid=<%=targetUser.id%>&cid=<%=item.id%>"><%=item.category_name%></a></li>
					<%})%>
					<li></li>
				</ul>
			</div>
		</div>
	</div>
</body>
<%include ../common/script.ejs%>
</html>
